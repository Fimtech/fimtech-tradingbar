<!DOCTYPE html>
<html lang="fr">
<head>
  <% include partials/head.ejs %>
</head>
<body>
<div class="container py-2">
  <div class="row">
    <div class="col-md-6">
      <h1><%= title %></h1>
    </div>
    <div class="col-md-6">
      <div class="progress" style="height: auto">
        <div id="progressBar" class="progress-bar"></div>
        <h2 id="progressBarText" class="py-4" style="margin: auto; font-size: 3rem"></h2>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="d-flex">
    <canvas id="myChart" class="flex-fill" style="display: none; max-width: 60%"></canvas>
    <div class="flex-fill">
      <table id="table" class="table table-striped" style="font-size: 3rem;">
        <thead class="thead-dark" style="font-size: 1rem;">
        <tr>
          <th scope="col">Nom</th>
          <th scope="col">Prix</th>
          <th scope="col">Variation</th>
        </tr>
        </thead>
        <tbody id="tableData">

        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/scripts.ejs %>
<script src="/javascripts/listen.js"></script>
</body>
</html>
